
<h1>Code Snippets</h1>
<%= @snippet.errors.full_messages.join(", ") %>

<%= form_for @snippet do |f| %>

  <div>
   <%= f.collection_select :language_id, Language.all, :id, :name %>
  </div>

  <div>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %> <br>
    <%= f.text_area :body %>
  </div>
  <%= f.submit %>
<% end %>
